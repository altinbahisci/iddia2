<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
<div class="section nomargin nobg notopborder" style="padding: 80px 0 0 0;">
<div class="container ">
<div>
<div class="theTitle">
<h1>Hesabı düzenle <%= current_user.email %></h1>
</div>
<div class="js-form-controlers">
<div class="js-form-resultss"></div>

<div class="field">
 
</div>
 <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= resource.unconfirmed_email %> adresi için düzenleme yapıyorsunuz.</div>
  <% end %>
<div class="field">
 <%= f.password_field :password, autofocus: true, autocomplete: "off" ,required:'required',class:'form-control input-lg',placeholder:'Parola (*)'%>
</div>

<div class="field">
 <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off" ,required:'required',class:'form-control input-lg',placeholder:'Parola Onay (*)'%>
</div>


  <div class="field">
    <%= f.password_field :current_password,  autofocus: true, autocomplete: "on" ,required:'required',class:'form-control input-lg',placeholder:'Mevcut Parola (*)'%>
  </div>


  <div class="actions">
    <%= f.submit "Düzenle" ,class:"button regbtn"%>
<br><br>  
<div class="field">  
<%= button_to "Hesabi Sil", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"button regbtn" ,:style=>'background: #ff0000;'%>
</div>

<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
